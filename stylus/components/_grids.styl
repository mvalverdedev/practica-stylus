.grid
  display: flex
  flex-wrap: wrap
  position: relative
  justify-content: flex-start
  flex-direction: row

[class^="grid--item"]
  flex-shrink: 0
  margin-right: 12px
  flex-grow: 1

for i in gridsize
  .grid--item-{i}
    width: (100px / i) * 1%